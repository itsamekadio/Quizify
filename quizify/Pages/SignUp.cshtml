<head>
    <title>Sign Up Form</title>
    <style>
        .admin-info,
        .author-info {
            display: none; /* Hide the additional fields by default */
        }
    </style>
    <script>
        function showAdditionalFields() {
            var adminInfo = document.querySelector(".admin-info");
            var authorInfo = document.querySelector(".author-info");
            var adminRadio = document.getElementById("admin-radio");
            var authorRadio = document.getElementById("author-radio");

            if (adminRadio.checked) {
                adminInfo.style.display = "block"; // Show admin info fields
                authorInfo.style.display = "none"; // Hide author info fields
            } else if (authorRadio.checked) {
                adminInfo.style.display = "none"; // Hide admin info fields
                authorInfo.style.display = "block"; // Show author info fields
            } else {
                adminInfo.style.display = "none"; // Hide admin info fields
                authorInfo.style.display = "none"; // Hide author info fields
            }
        }
    </script>
</head>
