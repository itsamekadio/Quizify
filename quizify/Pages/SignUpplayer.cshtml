@page
@model Quizzify.Pages.SignUpPlayerModel
@{
}
@* 
*@

<head>
    <title>Sign Up Form</title>
    <style>
        .admin-info,
        .author-info {
            display: none; /* Hide the additional fields by default */
        }
    </style>
 
</head>
<body>
    <form  method="post">
        <div class="text-center">
        <h1>Sign Up</h1>
        <p>Please fill in this form to create an account.</p>

            <label><b>First Name</b></label><br>
            <input type="text" asp-for="@Model.fname" /> <br />
            <span asp-validation-for="@Model.fname" class="text-danger"></span>
            <label><b>Last Name</b></label><br>
            <input type="text" asp-for="@Model.lname" /> <br />
            <span asp-validation-for="@Model.lname" class="text-danger"></span>
        <label><b>Email</b></label><br>
            <input type="email" asp-for="@Model.email" /> <br />
            <span asp-validation-for="@Model.email" class="text-danger"></span>

            <label>password</label>
            <input type="text" asp-for="@Model.password" /> <br />

        <label><b>Repeat Password</b></label><br>
            <input type="text" asp-for="@Model.passdup" /> <br />
            <span asp-validation-for="@Model.passdup" class="text-danger"></span>

        </div>

        <div>
            
            <button type="submit">Sign up</button>
        </div>
        

    </form>
     
</body>

