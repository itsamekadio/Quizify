<form method="post">
    <div class="text-center">
        <h1>Sign Up</h1>
        <p>Please fill in this form to create an account.</p>

        <label>
            <b>First Name</b>
        </label><br>
        <input type="text" asp-for="@Model.fname"/> <br/>
        <span asp-validation-for="@Model.fname" class="text-danger"></span>
        <label>
            <b>Last Name</b>
        </label><br>
        <input type="text" asp-for="@Model.lname"/> <br/>
        <span asp-validation-for="@Model.lname" class="text-danger"></span>
        <label>
            <b>Email</b>
        </label><br>
        <input type="email" asp-for="@Model.email"/> <br/>
        <span asp-validation-for="@Model.email" class="text-danger"></span>

        <label>password</label>
        <input type="text" asp-for="@Model.password"/> <br/>

        <label>
            <b>Repeat Password</b>
        </label><br>
        <input type="text" asp-for="@Model.passdup"/> <br/>
        <span asp-validation-for="@Model.passdup" class="text-danger"></span>

    </div>
    <label>
        <b>Authentication code</b>
    </label><br>
    <input type="text" asp-for="@Model.authcode"/> <br/>
    <span asp-validation-for="@Model.authcode" class="text-danger"></span>

    <div>

        <button type="submit">Sign up</button>
    </div>


</form>

