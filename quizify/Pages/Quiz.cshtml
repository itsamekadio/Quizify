@page
@model Quizzify.Pages.QuizModel
@{
}


    <form method="post">

        <br />


    <body>

        <div class="quiz-page">
            <div class="quiz-header">
                <h2>Quiz Title</h2>
            </div>

            <div class="quiz-content">
                <h3 class="question-number">Question 1</h3>
                <p class="question">What is the capital of France?</p>

                <!-- Choices for the current question -->
                <div class="choices">
                    <label>
                        <input type="radio" name="choice" value="a"> A. Paris
                    </label>
                    <label>
                        <input type="radio" name="choice" value="b"> B. Rome
                    </label>
                    <label>
                        <input type="radio" name="choice" value="c"> C. Berlin
                    </label>
                    <label>
                        <input type="radio" name="choice" value="d"> D. Madrid
                    </label>
                </div>

                <!-- Navigation buttons -->
                <div class="navigation-buttons">
                    <button asp-route-id="1" class="prev-button">Previous </button>
                    <button asp-route-id="2" class="next-button"> Next </button>
                </div>

                <!-- Finish Quiz button -->
                <button asp-route-id="3" class="finish-quiz-button"> Finish Quiz </button>
            </div>

    </body>

    
    </form>


